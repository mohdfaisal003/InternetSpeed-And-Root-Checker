<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- base application theme. -->
    <style name="Base.Theme.RootedDeviceInfo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#424949</item>
<!--        <item name="android:statusBarColor">@color/clr_status_bar</item>-->
    </style>

    <style name="Theme.RootedDeviceInfo" parent="Base.Theme.RootedDeviceInfo" />

    <style name="AppBackground">
        <item name="android:background">@color/clr_app_back</item>
    </style>
    <style name="Toolbar">
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/clr_app_back</item>
        <item name="android:elevation">5dp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">6</item>
    </style>
    <style name="Device">
        <item name="android:background">@drawable/device_shape</item>
    </style>
    <style name="headingTv16">
<!--        <item name="android:fontFamily">@font/montserrat_semibold</item>-->
        <item name="android:fontFamily">@font/montserrat_extrabold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="headingTv14">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="descTv14">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="descTv12">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <style name="descBtnTv12">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>