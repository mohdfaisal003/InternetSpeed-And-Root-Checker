<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20sp"
    android:paddingTop="10sp"
    android:paddingRight="20sp"
    android:paddingBottom="20sp">

    <LinearLayout
        android:id="@+id/networkCardLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        android:background="@drawable/card_black_bg"
        android:elevation="5sp"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:id="@+id/headingTv"
            style="@style/headingTv14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/network_txt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/speedTv"
                    style="@style/headingTv16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.00"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/speedTypeTv"
                    style="@style/headingTv16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:text="Mbps" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/networkNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Airtel"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/ipAddTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:text="IP: 129.0.0.1"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/macAddTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3sp"
                        android:text="Mac: 1234456789"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">

                    

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>